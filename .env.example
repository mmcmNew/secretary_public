# Пример файла переменных окружения для Secretary App
# Скопируйте этот файл в .env и настройте под ваши нужды

# Flask настройки
FLASK_ENV=production
FLASK_APP=run_docker.py
SECRET_KEY=your-super-secret-key-change-this-in-production

# Порт приложения
PORT=5100

# База данных
DATABASE_URL=sqlite:///user_data/db/production.db

# JWT настройки
JWT_SECRET_KEY=your-jwt-secret-key-change-this-too

# Логирование
LOG_LEVEL=INFO

# Домен (для production)
DOMAIN=localhost

# SSL (для production с reverse proxy)
USE_SSL=false